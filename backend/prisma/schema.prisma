generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id    Int     @id @default(autoincrement())
  restaurantName  String
  email String  @unique
  password String
  menus Menu[]
  ContactNum  BigInt
  City        String
  upiqr   UpiQr[]
}

model Menu {
  id       Int    @id @default(autoincrement())
  title    String
  imageUrl String
  userId   Int
  user     User   @relation(fields: [userId], references: [id])
}

model UpiQr {
  id Int @id @default(autoincrement())
  userId Int
  user   User @relation(fields: [userId],references: [id])
}